@model FribergCarRental.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container mt-4">
    <h1>@Model.Model - @Model.Year</h1>
    <div class="d-flex flex-wrap align-items-start gap-4">
        <div class="text-details" style="flex: 1; max-width: 25%;">
            <p><strong>Beskrivning:</strong> @Model.Description</p>
            <p><strong>Pris:</strong> @Model.Price kr/dygn</p>
            <p><strong>Status:</strong> @(Model.IsActive == true ? "Tillgänglig" : "Ej Tillgänglig")</p>
            <form asp-controller="Car" asp-action="RentCar" method="get">
                <input type="hidden" name="carId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Boka</button>
            </form>
        </div>
        <div class="carousel-container" style="flex: 1; max-width: 50%;">
            <div id="carImagesCarousel" class="carousel slide" data-bs-ride="carousel" style="max-width: 600px; margin: 0 auto;">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        var image = Model.Images[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@image.ImageUrl" class="d-block mx-auto" alt="@Model.Model" style="max-height: 400px; -o-object-fit: contain;">
                        </div>
                    }
                </div>
                @if (Model.Images.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#carImagesCarousel" data-bs-slide="prev" style="width: 5%;">
                        <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color: rgba(0, 0, 0, 0.5);"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carImagesCarousel" data-bs-slide="next" style="width: 5%;">
                        <span class="carousel-control-next-icon" aria-hidden="true" style="background-color: rgba(0, 0, 0, 0.5);"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>
        </div>

        
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till alla bilar</a>
</div>
