@model FribergCarRental.ViewModels.CreateCarViewModel

@{
    ViewData["Title"] = "Lägg till ny bil";
}

<div class="container col-md-6">
    <div class="card shadow-lg p-4">
        <h4 class="card-header mb-3 text-center">Lägg till ny bil</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div>
                <label asp-for="Model" class="form-label fw-semibold">Modell</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Year" class="form-label fw-semibold">Årsmodell</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Price" class="form-label fw-semibold">Pris (kr/dygn)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Description" class="form-label fw-semibold">Beskrivning</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="md-12">
                <label asp-for="ImageUrl" class="form-label fw-semibold">Bild-URL</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Skapa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Tillbaka
                </a>                
            </div>
        </form>
    </div>
</div>
