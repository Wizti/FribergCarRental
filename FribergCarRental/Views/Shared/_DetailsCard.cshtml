@model Dictionary<string, object>

<div class="card shadow-lg p-4">
    <h4 class="card-title mb-3 text-center">@ViewData["Title"]</h4>

    @foreach (var detail in Model)
    {
        <div class="mb-3">
            <strong>@detail.Key:</strong> @detail.Value
        </div>
    }

    <div class="d-flex justify-content-between mt-4">
        @if (ViewData["EditAction"] != null)
        {
            <a asp-action="@ViewData["EditAction"]" asp-route-id="@ViewData["ItemId"]" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Ändra
            </a>
        }

        <a asp-action="@ViewData["BackAction"]" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Tillbaka
        </a>
    </div>
</div>
