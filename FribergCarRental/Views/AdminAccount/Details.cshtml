@model FribergCarRental.Models.Customer

@{
    ViewData["Title"] = "Kundinformation";
    ViewData["EditAction"] = "Edit";
    ViewData["BackAction"] = "Index";
    ViewData["ItemId"] = Model.Id;

    var details = new Dictionary<string, object>
    {
        { "Förnamn", Model.FirstName },
        { "Efternamn", Model.LastName },
        { "Telefonnummer", Model.Phone },
        { "Gatuadress", Model.Address.Street },
        { "Postnummer", Model.Address.Postalcode },
        { "Stad", Model.Address.City },
        { "E-post", Model.Email },
        { "Användarnamn", Model.UserName },
        { "Lösenord", Model.Password },
        { "Roll", Model.Role },
        { "Kundnr", Model.Id },
    };
}

<div class="container col-md-6">
    @Html.Partial("_DetailsCard", details)
</div>

