@model FribergCarRental.ViewModels.EditCustomerViewModel

@{
    ViewData["Title"] = "Redigera kund";
}

<div class="container col-md-6">
    <div class="card shadow-lg p-4">
        <h4 class="card-header mb-3 text-center">Redigera kund</h4>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
            <div>
                    <label asp-for="FirstName" class="form-label fw-semibold">Förnamn</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div>
                    <label asp-for="LastName" class="form-label fw-semibold">Efternamn</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div>
                    <label asp-for="Phone" class="form-label fw-semibold">Telefonnummer</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div>
                    <label asp-for="Street" class="form-label fw-semibold">Adress (Gata)</label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                    <label asp-for="Postalcode" class="form-label fw-semibold">Postnummer</label>
                <input asp-for="Postalcode" class="form-control" />
                <span asp-validation-for="Postalcode" class="text-danger"></span>
            </div>

            <div>
                    <label asp-for="City" class="form-label fw-semibold">Stad</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                    <label asp-for="UserName" class="form-label fw-semibold">Användarnamn</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <div class="col-md-6">
                    <label asp-for="Password" class="form-label fw-semibold">Lösenord</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Spara
                    </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Tillbaka
                </a>
                
            </div>
            </div>
        </form>
    </div>
</div>
