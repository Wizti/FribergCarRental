@model FribergCarRental.ViewModels.RentalViewModel

@{
    ViewData["Title"] = "SelectDates";
}

<h1>Boka bil</h1>


<div class="accordion" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                @Model.Model
                <strong> @Model.Price</strong>
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Rental" asp-action="ConfirmRental">

            <input type="hidden" name="CarId" value="@Model.CarId" />
            <div class="form-group">
                <label for="StartDate">Startdatum</label>
                <input type="date" id="StartDate" name="StartDate" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="EndDate">Slutdatum</label>
                <input type="date" id="EndDate" name="EndDate" class="form-control" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Boka" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

