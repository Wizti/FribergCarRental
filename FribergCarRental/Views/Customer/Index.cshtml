<table class="table table-bordered table-hover text-center table-striped">
    <thead class="table-dark">
        <tr>
            <th>Status</th>
            <th>Startdatum</th>
            <th>Slutdatum</th>
            <th>Bil</th>
            <th>Total summa</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@item.RentalStart</td>
                <td>@item.RentalEnd</td>
                <td>@item.Car.Model</td>
                <td> 1567,00 &nbsp;SEK</td>
                <td>
                    <div class="d-flex gap-2 justify-content-left">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> Detaljer
                        </a>
                        @if (item.Status == FribergCarRental.Data.Enums.RentalStatus.Upcoming)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Ta bort
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
