@model FribergCarRental.Models.Rental

@{
    ViewData["Title"] = "Delete";
}

<h1>Ta Bort</h1>

<h3>Är du säker på att du vill ta bort denna bokning?</h3>
<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentalStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentalStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentalEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentalEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ta Bort" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till bokningar</a>
    </form>
</div>
