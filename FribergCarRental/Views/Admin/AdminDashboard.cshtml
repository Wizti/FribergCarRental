@{
    ViewData["Title"] = "AdminDashboard";
}

<h1 class="text-center mb-4">Välkommen till Admin Dashboard</h1>

<div class="row justify-content-center">
    <div class="col-md-4 mb-4">
        <div class="card">
            <img src="https://bucket-image.inkmaginecms.com/version/desktop/cabinet/2023/05/5bd0aded-768b-40da-ae1c-47e2059aa439.jpg" class="card-img-top" alt="Hantera Bilar">
            <div class="card-body">
                <h5 class="card-title">Bilar</h5>
                <p class="card-text">Lägg till, redigera och ta bort bilar i systemet.</p>
                <a asp-action="Index" asp-controller="AdminCar" class="btn btn-primary w-100">Gå till Hantering</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card">
            <img src="https://www.clipartmax.com/png/middle/349-3496311_download-users-icon-clipart-computer-icons-user-communication-users-group-icon.png" class="card-img-top" alt="Hantera Kunder">
            <div class="card-body">
                <h5 class="card-title">Kunder</h5>
                <p class="card-text">Hantera kundinformation och profilinställningar.</p>
                <a asp-action="Index" asp-controller="AdminAccount" class="btn btn-primary w-100">Gå till Hantering</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card">
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Hantera Bokningar">
            <div class="card-body">
                <h5 class="card-title">Bokningar</h5>
                <p class="card-text">Visa och hantera kundernas bokningar och scheman.</p>
                <a asp-action="Index" asp-controller="AdminRental" class="btn btn-primary w-100">Gå till Hantering</a>
            </div>
        </div>
    </div>
</div>



